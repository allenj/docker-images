#! /bin/bash
#
# U.S. Geological Survey
#
# File - ofp
#
# Purpose - Docker entry-point for NHM ofp container.
#
# Authors - Ivan Suftin, Richard McDonald, Steven Markstrom,
#           Andrew Halper
#

dir='/nhm/NHM-PRMS_CONUS/'

. /usr/local/share/nhm/nhm.sh	# use NHM shell functions library

# if simulation interval is not specified...
if [ -z "$NHM_INTERVAL" ]; then
    # ...calculate restart interval
    i=$(restart_interval $dir 'restart/' '59')
else
    i=$NHM_INTERVAL
fi

/opt/conda/bin/python -u $NHM_SOURCE_DIR/onhm-fetcher-parser/pkg/climate_etl.py \
		      -t date -p `echo $i | sed 's/\// /'` \
		      -i /nhm/ofp/nhm_hru_data \
		      -o $dir\input \
		      -w /nhm/ofp/nhm_hru_data/weights.csv
