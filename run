#! /bin/bash
#
# U.S. Geological Survey
#
# File - run
#
# Purpose - Simulate NHM run on Shifter, as might be done by Jenkins.
#
# Author - Andrew Halper
#

# if on HPC ...
if uname -r | grep cray > /dev/null 2>&1 ; then
    # ... run as Slurm batch job
    sbatch --parsable --job-name=nhm run.sl
fi
